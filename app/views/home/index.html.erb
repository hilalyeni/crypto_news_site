<table class="table table-sm table-striped table-bordered table-hover">
	<thead class="thead-light">
		<tr>
			<th scope="col">Name</th>
			<th scope="col">Price</th>
			<th scope="col">24hr High</th>
			<th scope="col">24hr Low</th>
			<th scope="col">Marketcap</th>
		</tr>
		<% @prices["DISPLAY"].each do |key, value| %>
		
	</thead>
	<tbody>
		<tr>
			<td><%= key %></td>
			<td><%= value["USD"]["PRICE"] %></td>
			<td><%= value["USD"]["HIGHDAY"] %></td>
			<td><%= value["USD"]["LOWDAY"] %></td>
			<td><%= value["USD"]["MKTCAP"] %></td>
		</tr>
		<% end %>
	</tbody>
</table>






<div class="container">
	<div class="row">
		<div class="col-xs-15 col-md-15">
		<% for x in @news["Data"] %>
			<div class="col-xs-6 col-md-4">
		  		<div class="col-xs-10">
		    		<div class="thumbnail">
		      			<img src="<%= x["imageurl"] %>" alt="<%= x["source"] %>">
		      				<div class="caption">
		        				<h4 class="title"><strong><%= x["title"] %></strong></h4>
		        				<p class="text"><%= x["body"] %> </p>
		        				<p><a href="<%= x["url"] %>" class="btn btn-primary" role="button">Read More..</a></p>
		     				</div>
		    		</div>
		    		<br/>
		  		</div>
			</div>
		<% end %>
	</div>
</div>
</div>